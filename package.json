{
  "name": "qsys-intellisense",
  "displayName": "Better Lua for Q-SYS Plugins",
  "description": "IntelliSense and autocomplete support for QSYS Lua plugin development",
  "version": "1.3.0",
  "publisher": "integratorblocks",
  "icon": "images/qsyslogo256.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/hojoworks/better-qsys-vscode-extension"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:lua"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "qsys-intellisense.openDocumentation",
        "title": "Q-SYS: Open Reserved Functions Documentation"
      },
      {
        "command": "qsys-intellisense.openLuaExtensions",
        "title": "Q-SYS: Open Lua Extensions Documentation"
      }
    ],
    "keybindings": [
      {
        "command": "qsys-intellisense.openDocumentation",
        "key": "ctrl+shift+h",
        "mac": "cmd+shift+h",
        "when": "editorLangId == lua"
      },
      {
        "command": "qsys-intellisense.openLuaExtensions",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorLangId == lua"
      }
    ],
    "configurationDefaults": {
      "files.associations": {
        "*.qplug": "lua"
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "npx @vscode/vsce package",
    "publish": "npx @vscode/vsce publish"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^3.6.2",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  }
}
